= form_for @registration_step do |f|
  - if @registration_step.errors.any?
    #error_explanation
      %h2= "#{pluralize(@registration_step.errors.count, "error")} prohibited this registration_step from being saved:"
      %ul
        - @registration_step.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :position
    = f.number_field :position
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :icon
    = f.text_field :icon
  .field
    = f.label :url
    = f.text_field :url
  .actions
    = f.submit 'Save'
