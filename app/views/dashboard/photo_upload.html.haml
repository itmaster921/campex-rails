.ui.segment
  %h4.ui.horizontal.header.divider
    %i.photo.icon
    Photo Upload
  - if current_user.profile_image.nil?
    = form_for current_user, html:{class:"ui fluid form" }, multipart: true do |f|
      #error_messages
      = hidden_field_tag 'step_name', 'Photo Upload'
      .field
        = label_tag :profile_image
        = f.file_field :profile_image
      .field
        = submit_tag 'Upload Photo', class: "ui submit button"
  - else
    = link_to "Click here to download application", :controller => :dashboard, :action => :generate_application_pdf , remote: true
