= form_for @board do |f|
  - if @board.errors.any?
    #error_explanation
      %h2= "#{pluralize(@board.errors.count, "error")} prohibited this board from being saved:"
      %ul
        - @board.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :subject_structure
    = f.text_field :subject_structure
  .field
    = f.label :disabled
    = f.check_box :disabled
  .actions
    = f.submit 'Save'
